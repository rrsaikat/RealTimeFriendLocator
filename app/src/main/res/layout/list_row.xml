<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="160dp"
        android:layout_height="240dp"
        android:layout_margin="10dp"
        android:elevation="1dp"
        app:cardBackgroundColor="@color/md_grey_100"
        card_view:cardCornerRadius="4dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="1dp"
                android:layout_alignParentEnd="true">
                <ImageView
                    android:id="@+id/cs_imgView"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="9dp"
                    android:src="@drawable/red_button_background"/>

                <TextView
                    android:id="@+id/current_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="offline"
                    android:alpha=".5"
                    android:textSize="12sp"
                    android:layout_marginTop="15dp"/>
            </FrameLayout>
            <LinearLayout
                android:id="@+id/LL"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <bd.ac.pstu.rezwan12cse.bounduley12.views.CircularImageView
                    android:id="@+id/thumbnail"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:src="@drawable/userimage"
                    app:border="false"
                    app:shadow="true"
                    app:shadow_radius="4dp"
                    app:shadow_color="@color/circle_image_shadow" />


            <TextView
                android:id="@+id/vname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_below="@+id/thumbnail"
                android:text="Zobayer"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginTop="15dp"
                android:paddingBottom="2dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                />
            <TextView
                android:id="@+id/vemail"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="rrsaikat88@pstu.cse.ac.bd.com"
                android:layout_below="@+id/vname"
                android:textSize="11sp"
                android:textAlignment="center"
                />
            <TextView
                android:id="@+id/vaddress"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01772474181"
                android:textSize="12sp"
                android:fontFamily="sans-serif-condensed"
                android:layout_below="@+id/vemail"/>

            </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_alignParentBottom="true">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="#ACACAC"/>
                </LinearLayout>
            <LinearLayout
                android:gravity="bottom"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Last Seen"
                    android:textSize="10sp"
                    android:textColor="#7000"
                    android:gravity="center"
                    android:paddingBottom="10dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:padding="4dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="03:17:29 PM"
                        android:textColor="@color/md_light_blue_400"
                        android:textSize="10sp"
                        android:textColorHint="#000"
                        android:background="#00000000"
                        android:id="@+id/shopvalid"
                        android:gravity="center" />
                    <TextView
                        android:visibility="gone"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="dd-MM-yyyy"
                        android:textColor="@color/md_indigo_400"
                        android:textSize="7sp"
                        android:textColorHint="#000"
                        android:background="#00000000"/>
            </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:background="#ACACAC"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    android:textSize="10sp"
                    android:textColor="#7000"
                    android:gravity="center"
                    android:paddingBottom="8dp"/>

                <ImageView
                    android:id="@+id/shopmap"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_action_name"
                    android:clickable="true"
                    android:backgroundTint="@color/md_pink_400" />
            </LinearLayout>
            <View
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:background="#ACACAC"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phone"
                    android:textSize="10sp"
                    android:textColor="#7000"
                    android:gravity="center"
                    android:paddingBottom="8dp"/>

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/ic_call"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:backgroundTint="@color/md_green_400"
                    android:id="@+id/phonecall" />
            </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="#ACACAC"/>
            </LinearLayout>
</LinearLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>